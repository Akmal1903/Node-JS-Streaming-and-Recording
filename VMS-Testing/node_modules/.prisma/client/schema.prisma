generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera {
  id          String   @id
  name        String
  path        String   @unique
  floor       String?
  input       String
  continuous  Boolean  @default(false)
  inputConfig Json?
  liveConfig  Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  recordInput String?
  isActive    Boolean? @default(true)
  is_online   Boolean? @default(false)

  @@map("cameras")
}

model PTZCamera {
  id             String   @id @db.VarChar(191)
  name           String
  path           String   @unique
  floor          String?
  input          String
  continuous     Boolean  @default(false)
  inputConfig    Json?
  liveConfig     Json?
  recordInput    String?  @map("recordinput")
  isActive       Boolean? @default(true) @map("isactive")
  is_online      Boolean? @default(false)
  host_ip        String?
  onvif_user     String?
  onvif_password String?

  @@map("ptzcameras")
}
